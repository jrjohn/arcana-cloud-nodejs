{
  "name": "arcana-cloud-nodejs",
  "version": "1.0.0",
  "description": "Enterprise Node.js cloud application with Clean Architecture",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --experimental-transform-types --watch src/index.ts",
    "dev:debug": "node --experimental-transform-types --inspect --watch src/index.ts",
    "start": "node --experimental-transform-types src/index.ts",
    "start:prod": "NODE_ENV=production node --experimental-transform-types src/index.ts",
    "build": "tsc --build",
    "build:check": "tsc --noEmit",
    "test": "node --experimental-transform-types --test tests/**/*.test.ts",
    "test:vitest": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run tests/integration/",
    "test:db": "vitest --run --config vitest.config.db.ts",
    "test:db:watch": "vitest --config vitest.config.db.ts",
    "test:all": "vitest --run && vitest --run --config vitest.config.db.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "node --experimental-transform-types prisma/seed.ts",
    "db:test:up": "docker-compose -f deploy/docker/docker-compose.db-test.yml up -d mysql-test redis-test",
    "db:test:down": "docker-compose -f deploy/docker/docker-compose.db-test.yml down -v",
    "db:test:reset": "npm run db:test:down && npm run db:test:up",
    "docker:dev": "docker-compose up -d",
    "docker:layered": "docker-compose -f deploy/docker/docker-compose.layered.yml up -d",
    "docker:benchmark": "docker-compose -f deploy/docker/docker-compose.benchmark.yml up",
    "grpc:generate": "grpc_tools_node_protoc --ts_out=./src/grpc/generated --grpc_out=grpc_js:./src/grpc/generated -I ./src/grpc/protos ./src/grpc/protos/*.proto"
  },
  "prisma": {
    "seed": "node --experimental-transform-types prisma/seed.ts"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.0",
    "@grpc/proto-loader": "^0.7.13",
    "@prisma/client": "^6.0.0",
    "axios": "^1.7.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.30.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "inversify": "^7.10.6",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.3",
    "eslint-plugin-security": "^4.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.0",
    "prisma": "^6.0.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22.6.0"
  }
}
